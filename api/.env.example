# KRA API 설정
KRA_API_KEY=your_kra_api_key_here
KRA_API_BASE_URL=https://apis.data.go.kr/B551015

# 데이터베이스 설정
DATABASE_URL=postgresql+asyncpg://kra_user:kra_password@localhost:5432/kra_analysis
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis 설정
REDIS_URL=redis://:kra_redis_password@localhost:6379/0

# Celery 설정
CELERY_BROKER_URL=amqp://kra_rabbit:kra_rabbit_password@localhost:5672//
CELERY_RESULT_BACKEND=redis://:kra_redis_password@localhost:6379/1

# 보안 설정
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API 키 (개발용)
VALID_API_KEYS=["demo_key_1", "demo_key_2"]

# CORS 설정
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 로깅 설정
LOG_LEVEL=INFO

# 환경 설정
ENVIRONMENT=development
DEBUG=true

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 속도 제한
RATE_LIMIT_ENABLED=true