{
  "name": "kra-analysis",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "quality:api:lint": "bash apps/api/scripts/run_quality_ci.sh lint",
    "quality:api:format": "bash apps/api/scripts/run_quality_ci.sh format",
    "quality:api:typecheck": "bash apps/api/scripts/run_quality_ci.sh typecheck",
    "quality:api:unit": "bash apps/api/scripts/run_quality_ci.sh unit",
    "quality:api:integration": "bash apps/api/scripts/run_quality_ci.sh integration",
    "quality:api:coverage": "bash apps/api/scripts/run_quality_ci.sh coverage",
    "quality:api:ci": "bash apps/api/scripts/run_quality_ci.sh all",
    "quality:node:lint": "pnpm -F @repo/shared-types run lint",
    "quality:node:typecheck": "pnpm -F @repo/shared-types run typecheck",
    "quality:node:test": "pnpm -F @repo/shared-types run test:ci",
    "quality:node:ci": "pnpm run quality:node:lint && pnpm run quality:node:typecheck && pnpm run quality:node:test",
    "quality:security": "bash .github/scripts/security_checks.sh",
    "quality:ci": "pnpm run quality:api:ci && pnpm run quality:node:ci && pnpm run quality:security",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "2.5.5",
    "@types/node": "^22.10.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": ["apps/*", "packages/*"],
  "pnpm": {
    "overrides": {
      "typescript": "^5.3.3",
      "eslint": "^8.57.0",
      "@typescript-eslint/eslint-plugin": "^6.0.0",
      "@typescript-eslint/parser": "^6.0.0",
      "@types/node": "^22.10.2",
      "jest": "^29.7.0",
      "ts-jest": "^29.1.2",
      "@types/jest": "^29.5.12",
      "eslint-config-prettier": "^9.0.0",
      "eslint-plugin-prettier": "^5.0.0",
      "tsx": "^4.19.2"
    }
  }
}
