{
  "name": "@apps/collector",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest --watchman=false",
    "test:watch": "jest --watch --watchman=false",
    "test:coverage": "jest --coverage --watchman=false",
    "test:integration": "jest --testPathPattern=integration --watchman=false",
    "test:e2e": "jest --testPathPattern=e2e --watchman=false",
    "test:unit": "jest --testPathPattern=unit --watchman=false",
    "test:simple": "jest --watchman=false tests/api-simple.test.ts tests/middleware/validation.test.ts",
    "test:kra": "jest --watchman=false --runTestsByPath tests/integration/kra-api-integration.test.ts tests/e2e/api-e2e.test.ts",
    "test:ci": "npm run lint && npm run typecheck && npm run test:simple",
    "test:all": "npm run test:ci && npm run test:kra",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "KRA 데이터 수집을 위한 TypeScript Node.js API 서버",
  "dependencies": {
    "@types/express": "^4.17.21",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.0.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.7.0",
    "redis": "^5.8.0",
    "uuid": "^11.1.0",
    "winston": "^3.16.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
