[run]
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */migrations/*
    setup.py
    */config.py
    main.py
    main_v2.py
    run_tests.py
    infrastructure/claude_cli/*
    infrastructure/supabase_client.py
    infrastructure/kra_api/client.py

[report]
fail_under = 80
show_missing = True
skip_covered = True
