{
  "extends": ["//"],
  "tasks": {
    "dev": {
      "env": ["PYTHONPATH=.", "KRA_API_KEY", "SUPABASE_URL", "SUPABASE_ANON_KEY", "REDIS_URL"],
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**", "htmlcov/**", ".coverage", "coverage.xml"],
      "inputs": ["**/*.py", "tests/**", "!**/__pycache__/**"]
    },
    "build": {
      "outputs": [],
      "inputs": ["**/*.py", "!tests/**", "!**/__pycache__/**"]
    },
    "lint": {
      "inputs": ["**/*.py", "!**/__pycache__/**"]
    },
    "typecheck": {
      "inputs": ["**/*.py", "!**/__pycache__/**"]
    }
  }
}