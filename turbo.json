{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env*"],
  "globalEnv": [
    "NODE_ENV"
  ],
  "globalPassThroughEnv": [
    "KRA_*",
    "SUPABASE_*",
    "REDIS_*",
    "DATABASE_URL",
    "SECRET_KEY",
    "CELERY_*",
    "PG*"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "jest.config.{js,ts,cjs,mjs}",
        "tsconfig.json",
        "**/*.py",
        "pyproject.toml",
        "pytest.ini"
      ],
      "outputs": ["coverage/**", "htmlcov/**", "coverage.xml"],
      "env": [
        "PORT",
        "HOST",
        "CORS_ORIGINS",
        "ALLOWED_ORIGINS",
        "DEV_API_KEY",
        "ADMIN_API_KEY",
        "USER_API_KEY",
        "READONLY_API_KEY",
        "VALID_API_KEYS"
      ]
    },
    "lint": {},
    "typecheck": {},
    "clean": {
      "cache": false
    }
  }
}
