{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "jest.config.{js,ts,cjs,mjs}",
        "tsconfig.json",
        "**/*.py",
        "pyproject.toml",
        "pytest.ini"
      ],
      "outputs": ["coverage/**", "htmlcov/**", "coverage.xml"],
      "env": [
        "NODE_ENV",
        "PORT",
        "HOST",
        "CORS_ORIGINS",
        "ALLOWED_ORIGINS",
        "DEV_API_KEY",
        "ADMIN_API_KEY",
        "USER_API_KEY",
        "READONLY_API_KEY",
        "REDIS_*",
        "KRA_*",
        "SUPABASE_*",
        "DATABASE_URL",
        "SECRET_KEY",
        "CELERY_*",
        "PG*",
        "VALID_API_KEYS"
      ]
    },
    "lint": {},
    "typecheck": {},
    "clean": {
      "cache": false
    }
  }
}
